{
  "extends": [
    "@importantimport/tsconfig/app.json",
    "@importantimport/tsconfig/parts/check-js.json",
    "@importantimport/tsconfig/parts/jsx-preserve.json"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}